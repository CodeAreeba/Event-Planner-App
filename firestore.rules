rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is active (not blocked or deleted)
    function isActiveUser(uid) {
      return exists(/databases/$(database)/documents/users/$(uid)) &&
             get(/databases/$(database)/documents/users/$(uid)).data.get('status', 'active') == 'active' &&
             get(/databases/$(database)/documents/users/$(uid)).data.get('isDeleted', false) != true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      
      allow create: if (isAuthenticated() && request.auth.uid == userId) ||
                       (!exists(/databases/$(database)/documents/users/$(userId)) &&
                        request.resource.data.uid == userId &&
                        request.resource.data.role == 'user');
      
      allow write: if isAdmin();
      
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       !request.resource.data.diff(resource.data).affectedKeys()
                         .hasAny(['role', 'status', 'isDeleted', 'deletedAt', 'uid', 'email']);
    }
    
    // Helper function to check if user is a provider
    function isProvider() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'provider';
    }
    
    // Services collection
    match /services/{serviceId} {
      allow read: if true;
      
      allow create: if isAdmin() || 
                       (isAuthenticated() && 
                        isActiveUser(request.auth.uid) && 
                        isProvider());
      
      allow update, delete: if isAdmin() || 
                               (isAuthenticated() && 
                                isActiveUser(request.auth.uid) && 
                                isProvider() && 
                                request.auth.uid == resource.data.createdBy);
    }
    
    // Provider Services collection (time slots for services)
    match /providerServices/{docId} {
      // Anyone can read provider services/slots (needed for booking flow)
      allow read: if true;
      
      // Admins can create any slots
      // Providers can only create slots for their own services
      allow create: if isAdmin() || 
                       (isAuthenticated() && 
                        isActiveUser(request.auth.uid) && 
                        isProvider() &&
                        request.auth.uid == request.resource.data.providerId);
      
      // Admins can update/delete any slots
      // Active providers can only update/delete their own slots
      allow update, delete: if isAdmin() || 
                               (isAuthenticated() && 
                                isActiveUser(request.auth.uid) && 
                                isProvider() && 
                                request.auth.uid == resource.data.providerId);
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      allow get: if isAdmin() || 
                    (isAuthenticated() && 
                     (request.auth.uid == resource.data.userId || 
                      request.auth.uid == resource.data.providerId));
      
      allow list: if isAuthenticated();
      
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if isAdmin() ||
                       (isAuthenticated() && 
                        (request.auth.uid == resource.data.userId || 
                         request.auth.uid == resource.data.providerId));
      
      allow delete: if isAdmin() ||
                       (isAuthenticated() && 
                        request.auth.uid == resource.data.userId);
    }
  }
}