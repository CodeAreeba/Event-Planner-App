rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is active (not blocked or deleted)
    function isActiveUser() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('status', 'active') == 'active' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isDeleted', false) != true;
    }
    
    // Users collection
    match /users/{userId} {
      // Admins can read all users (including deleted and blocked)
      // Active users can read their own profile and other users' profiles
      allow read: if isAdmin() || (isActiveUser() && isAuthenticated());
      
      // Admins can create/update/delete any user
      allow write: if isAdmin();
      
      // Users can update their own profile (except protected fields)
      allow update: if isActiveUser() && 
                       request.auth.uid == userId &&
                       !request.resource.data.diff(resource.data).affectedKeys()
                         .hasAny(['role', 'status', 'isDeleted', 'deletedAt', 'uid', 'email']);
    }
    
    // Services collection
    match /services/{serviceId} {
      // Anyone can read active services (but blocked/deleted users are blocked at app level)
      allow read: if true;
      
      // Only admins can create services
      allow create: if isAdmin();
      
      // Only admins can update or delete services
      allow update, delete: if isAdmin();
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Admins can read all bookings
      // Active users can read their own bookings or bookings for their services
      allow read: if isAdmin() || 
                     (isActiveUser() && 
                      (request.auth.uid == resource.data.userId || 
                       request.auth.uid == resource.data.providerId));
      
      // Only active users can create bookings
      allow create: if isActiveUser();
      
      // Admins can update all bookings
      // Active users can update their own bookings or bookings for their services
      allow update: if isAdmin() ||
                       (isActiveUser() && 
                        (request.auth.uid == resource.data.userId || 
                         request.auth.uid == resource.data.providerId));
      
      // Admins can delete all bookings
      // Active users can delete their own bookings
      allow delete: if isAdmin() ||
                       (isActiveUser() && request.auth.uid == resource.data.userId);
    }
  }
}
